= simple_form_for ["admin", @gallery, @gallery_image], html: { multipart: true } do |f|
  = f.input :name
  = f.input :alt
  = f.input :description, input_html: { rows: 5 }
  = f.input :image, as: :file
  %div= image_tag(@gallery_image.image_url(:thumb)) if @gallery_image.image?
  = f.input :image_cache, as: :hidden
  = f.button :submit, class: "btn btn-primary"
